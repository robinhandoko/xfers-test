<div><%= link_to "My Shop", shop_users_path %></div>
<div>Shop</div>
<div>Balance: Rp. <%= @user[:available_balance]%></div>

<table border="1", cellpadding="0", cellspacing="0">
  <thead>
    <tr>
      <td>Name</td>
      <td>Image</td>
      <td>Price</td>
      <td>&nbsp;</td>
    </tr>
  </thead>
  <tbody style="cursor: pointer;">
    <% @items.each do |item| %>
      <tr>
        <td><%= item[:name] %></td>
        <td><%= image_tag(item[:img_src], width: 100) %></td>
        <td><%= item[:price] %></td>
        <td>
          <%= link_to "Buy", buy_user_path(item[:id]) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

